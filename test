/* tester */

#include <iostream>
#include <string>
#include <map>

const int CHAR_MAP_SIZE = 256;

int main() {
    std::map<char, int> frequencyMap;
    std::map<char, int>::iterator mapIt;
    std::string test = "if a machine is expected to be infallible it cannot also be intelligent";

    for (auto& c : test) {
        if ((mapIt = frequencyMap.find(c)) != frequencyMap.end()) {
            mapIt->second += 1;
        }
        else {
            frequencyMap[c] = 1;
        }
    }

    for (auto& it : frequencyMap) {
        std::cout << it.first << "  " << it.second << "\n";
    }

    std::cout << std::endl;
}
